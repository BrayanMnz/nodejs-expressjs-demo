<form class="form-horizontal" role="form"
    method="POST"
    action="/person/signup">
  <div class="form-group">
    <label for="fieldName" class="col-sm-2 control-label">Nombre</label>
    <div class="col-sm-4">
      <input type="text" class="form-control"
      id="fieldName" name="name">
    </div>
  </div>
  <div class="form-group">
    <label for="fieldEmail" class="col-sm-2 control-label">Correo electrónico</label>
    <div class="col-sm-4">
      <input type="email" class="form-control" required
          id="fieldEmail" name="email">
    </div>
  </div>
    <div class="form-group">
    <label for="fieldUsername" class="col-sm-2 control-label">Nombre de usuario</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" required
          id="fieldUsername" name="username">
    </div>
  </div>
      <div class="form-group">
    <label for="fieldPassword" class="col-sm-2 control-label">Contraseña</label>
    <div class="col-sm-4">
      <input type="password" class="form-control" required
          id="fieldPassword" name="password">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <button type="submit" class="btn btn-primary">Registrarse</button>
    </div>
  </div>